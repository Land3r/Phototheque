{
  "name": "phototheque",
  "version": "1.0.0",
  "description": "Phototheque built on React and Electron",
  "main": "./app/build/app.js",
  "scripts": {
    "dev": "concurrently \"cross-env NODE_ENV=development webpack-dev-server --config webpack/dev.config.js\" \"cross-env NODE_ENV=development electron ./app/src/main/app.js\"",
    "prod": "cross-env NODE_ENV=production webpack --progress --color --config webpack/prod.config.js",
    "start": "npm run dev && electron app/build/app.js",
    "lint": "eslint --ext .jsx,.js app/src/main --fix",
    "pack": "electron-builder --dir",
    "dist": "npm run prod && electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "author": "Nicolas Gordat",
  "license": "MIT",
  "build": {
    "appId": "com.electron.phototheque",
    "productName": "Phototheque",
    "copyright": "Copyright Â© 2018 Nicolas Gordat",
    "directories": {
      "app": ".",
      "output": "release"
    },
    "win": {
      "target": "NSIS"
    },
    "linux": {
      "target": [
        "deb",
        "AppImage"
      ]
    },
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "./app/src/main/res/images/installer/installIcon.ico",
      "uninstallerIcon": "./app/src/main/res/images/installer/uninstallIcon.ico",
      "uninstallDisplayName": "Phototheque",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "menuCategory": "Phototheque",
      "shortcutName": "Phototheque"
    }
  },
  "keywords": [
    "electron",
    "react",
    "react router v4",
    "redux",
    "webpack 3"
  ],
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.4",
    "babel-minify-webpack-plugin": "^0.3.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-1": "^6.24.1",
    "concurrently": "^3.5.1",
    "copy-webpack-plugin": "^4.5.1",
    "cross-env": "^5.1.4",
    "css-loader": "^0.28.11",
    "electron": "^1.8.6",
    "electron-builder": "^20.10.0",
    "electron-devtools-installer": "^2.2.3",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-google": "^0.9.1",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.7.0",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "file-loader": "^1.1.11",
    "node-sass": "^4.9.0",
    "react-hot-loader": "^4.1.2",
    "react-svg-loader": "^2.1.0",
    "sass-loader": "^7.0.1",
    "style-loader": "^0.21.0",
    "webpack": "^4.6.0",
    "webpack-cli": "^2.0.15",
    "webpack-dev-server": "^3.1.3",
    "webpack-node-externals": "^1.7.2"
  },
  "dependencies": {
    "@coreui/coreui": "^2.0.6",
    "@coreui/coreui-plugin-chartjs-custom-tooltips": "^1.2.0",
    "@coreui/icons": "^0.3.0",
    "@coreui/react": "^2.0.5",
    "bootstrap": "^4.3.1",
    "chart.js": "^2.7.2",
    "classnames": "^2.2.6",
    "deepmerge": "^2.1.1",
    "exif-parser": "^0.1.12",
    "flag-icon-css": "^3.0.0",
    "font-awesome": "^4.7.0",
    "fs": "0.0.1-security",
    "jquery": "^3.3.1",
    "nedb": "^1.8.0",
    "prop-types": "^15.6.2",
    "react": "^16.5.0",
    "react-dom": "^16.5.0",
    "react-html5video": "^2.5.1",
    "react-json-view": "^1.19.1",
    "react-loadable": "^5.5.0",
    "react-redux": "^5.0.7",
    "react-router": "4.2.0",
    "react-router-dom": "4.2.2",
    "reactstrap": "^6.4.0",
    "redux": "^4.0.0",
    "simple-line-icons": "^2.4.1"
  }
}
